{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Democracy Clock \u2013 Step 4 Carry-Forward Table (v4.0)",
  "type": "object",
  "required": [
    "version",
    "period",
    "week",
    "policy",
    "categories",
    "traits",
    "totals",
    "provenance"
  ],
  "properties": {
    "version": {
      "type": "string",
      "const": "4.0"
    },
    "period": {
      "type": "object",
      "required": [
        "label",
        "start",
        "end"
      ],
      "properties": {
        "label": {
          "type": "string"
        },
        "start": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
        },
        "end": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
        }
      },
      "additionalProperties": false
    },
    "week": {
      "type": "object",
      "required": [
        "number",
        "start",
        "end",
        "baseline_of"
      ],
      "properties": {
        "number": {
          "type": "integer",
          "minimum": 0
        },
        "start": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
        },
        "end": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
        },
        "baseline_of": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "policy": {
      "type": "object",
      "required": [
        "presence_bounds",
        "difficulty_rule",
        "notes"
      ],
      "properties": {
        "presence_bounds": {
          "type": "object",
          "required": [
            "min",
            "max"
          ],
          "properties": {
            "min": {
              "type": "number"
            },
            "max": {
              "type": "number"
            }
          },
          "additionalProperties": false
        },
        "difficulty_rule": {
          "type": "string",
          "enum": [
            "max"
          ]
        },
        "notes": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "index"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "index": {
            "type": "integer",
            "minimum": 1
          }
        },
        "additionalProperties": false
      }
    },
    "traits": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "trait_id",
          "trait_number",
          "trait_name",
          "category",
          "category_index",
          "presence",
          "difficulty",
          "clamped"
        ],
        "properties": {
          "trait_id": {
            "type": "string"
          },
          "trait_number": {
            "type": "integer",
            "minimum": 1,
            "maximum": 60
          },
          "trait_name": {
            "type": "string"
          },
          "category": {
            "type": "string"
          },
          "category_index": {
            "type": "integer",
            "minimum": 1
          },
          "presence": {
            "type": "number"
          },
          "difficulty": {
            "type": "number"
          },
          "clamped": {
            "type": "object",
            "required": [
              "presence",
              "difficulty"
            ],
            "properties": {
              "presence": {
                "type": "boolean"
              },
              "difficulty": {
                "type": "boolean"
              }
            },
            "additionalProperties": false
          },
          "notes": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "totals": {
      "type": "object",
      "required": [
        "presence_sum",
        "difficulty_sum",
        "minutes_past_noon",
        "grand_total_max"
      ],
      "properties": {
        "presence_sum": {
          "type": "number"
        },
        "difficulty_sum": {
          "type": "number"
        },
        "minutes_past_noon": {
          "type": "number"
        },
        "grand_total_max": {
          "type": "number"
        }
      },
      "additionalProperties": false
    },
    "provenance": {
      "type": "object",
      "required": [
        "generated_at",
        "generator"
      ],
      "properties": {
        "generated_at": {
          "type": "string"
        },
        "generator": {
          "type": "string"
        },
        "source_traits_file": {
          "type": "string"
        },
        "source_movement_file": {
          "type": "string"
        },
        "hash": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}